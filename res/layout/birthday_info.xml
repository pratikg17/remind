        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
         />
 

 	<TextView
                android:layout_marginTop="25dp"
        android:id="@+id/Bid"
        android:layout_width="wrap_content"
